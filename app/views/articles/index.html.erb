
  
  <h1>Listing Articles</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
   
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Read', article_path(article), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', article_path(article), class: 'btn btn-danger btn-xs',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
